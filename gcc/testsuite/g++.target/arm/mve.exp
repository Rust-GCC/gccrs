# GCC testsuite that uses the `dg.exp' driver.

# Exit immediately if this isn't an ARM target.
if ![istarget arm*-*-*] then {
  return
}

# Load support procs.
load_lib g++-dg.exp

# If a testcase doesn't have special options, use these.
global DEFAULT_CXXFLAGS
if ![info exists DEFAULT_CXXFLAGS] then {
    set DEFAULT_CXXFLAGS " -pedantic-errors"
}

# This variable should only apply to tests called in this exp file.
global dg_runtest_extra_prunes
set dg_runtest_extra_prunes ""
lappend dg_runtest_extra_prunes "warning: switch '-m(cpu|arch)=.*' conflicts with switch '-m(cpu|arch)=.*'"

set save-dg-do-what-default ${dg-do-what-default}
set dg-do-what-default "assemble"

# Initialize `dg'.
dg-init

# Main loop.
dg-runtest [lsort [glob -nocomplain $srcdir/$subdir/../../gcc.target/arm/mve/intrinsics/*.\[cCS\]]] \
	"" $DEFAULT_CXXFLAGS

# All done.
set dg-do-what-default ${save-dg-do-what-default}
set dg_runtest_extra_prunes ""
dg-finish
