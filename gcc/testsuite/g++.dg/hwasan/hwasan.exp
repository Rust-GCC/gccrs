# Load support procs.
load_lib g++-dg.exp
load_lib hwasan-dg.exp

# Initialize `dg'.
dg-init
hwasan_init

# Main loop.
if [check_effective_target_fsanitize_hwaddress] {
  gcc-dg-runtest [lsort [glob -nocomplain $srcdir/$subdir/*.C $srcdir/c-c++-common/hwasan/*.c]] "" ""
}

# All done.
hwasan_finish
dg-finish
